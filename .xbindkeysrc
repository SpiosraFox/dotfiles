# start terminal
"urxvt"
    Mod4+Return

# start command launcher
"rofi -show run"
    Mod4+d

# start command launcher and run command with privileges
"rofi -show run -run-command 'gksudo {cmd}'"
    Mod4+Shift+d

# start SSH launcher
"rofi -show ssh"
    Mod4+Shift+s

# start password selection
"rofi-pass"
    Mod4+p

# start combi menu
"rofi -show combi"
    Mod4+q

# capture screen
"scrot -q 100 -z screen.png"
    Print

# capture window
"scrot -q 100 -uz screen.png"
    Mod4+Print

# capture selection
"scrot -q 100 -sz screen.png"
    Shift+Print

# increase output volume
"$HOME/bin/raise-vol.sh"
    XF86AudioRaiseVolume

# decrease output volume
"pactl set-sink-volume @DEFAULT_SINK@ -2%"
    XF86AudioLowerVolume

# mute output
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
    XF86AudioMute

# mute input
"pactl set-source-mute @DEFAULT_SOURCE@ toggle"
    shift+XF86AudioMute

# play/pause media
"playerctl play-pause"
    XF86AudioPlay

# next media track
"playerctl next"
    XF86AudioNext

# previous media track
"playerctl previous"
    XF86AudioPrev

# stop media
"playerctl stop"
    XF86AudioStop

# increase brightness
"brightnessctl set 5%+"
    XF86MonBrightnessUp

# decrease brightness
"brightnessctl set 5%-"
    XF86MonBrightnessDown

# lock screen
"i3lock -ec 000000 -i $HOME/.lockscreen.png"
    Mod1+l

# lock screen, suspending system as well
"i3lock -ec 000000 -i $HOME/.lockscreen.png && systemctl suspend"
    Mod1+Shift+l
