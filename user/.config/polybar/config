; ----- BARS -----

[bar/bar]
width = 100%
height = 2.5%
foreground = #b9b9b9
module-margin-left = 2
module-margin-right = 2
font-0 = DejaVu Sans:style=Book:size=10
font-1 = Font Awesome 5 Free:style=Solid
enable-ipc = true
modules-left = i3
modules-right = weather network audio microphone keyboard cpu-temperature gpu-temperature date


; ----- MODULES -----

[module/audio]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>
label-volume = %percentage%
label-muted = 
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/battery]
type = internal/battery
battery = BAT1
format-charging = <ramp-capacity> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
label-charging = +%percentage%%
label-discharging = %percentage%%
label-full = %percentage%%
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/cpu-temperature]
type = internal/temperature
hwmon-path = ${env:CPU_HWMON}
base-temperature = 35 
warn-temperature = 80
format = <ramp> <label>
format-warn = <ramp> <label-warn>
label = CPU, %temperature-c%
label-warn = CPU, %temperature-c%
label-warn-foreground = #f00
ramp-0 = 
ramp-1 = 
ramp-2 = 

[module/date]
type = internal/date
interval = 1.0
date = %Y-%m-%d
time = %H:%M
format =  <label>
label = %date% %time%

[module/gpu-temperature]
type = internal/temperature
hwmon-path = ${env:GPU_HWMON}
base-temperature = 25
warn-temperature = 94
format = <ramp> <label>
format-warn = <ramp> <label-warn>
label = GPU, %temperature-c%
label-warn = GPU, %temperature-c%
label-warn-foreground = #f00
ramp-0 = 
ramp-1 = 
ramp-2 = 

[module/i3]
type = internal/i3
index-sort = true
format = <label-state> <label-mode>
label-focused = %name%
label-focused-background = #5f6d36
label-focused-padding = 2
label-unfocused = %name%
label-unfocused-background = #262b15
label-urgent = %name%
label-visible = %name%
label-separator = |

[module/keyboard]
type = internal/xkeyboard
label-layout =  %name%

[module/microphone]
type = custom/ipc
hook-0 = ${env:MICROPHONE_SCRIPT}
initial = 1
format = <output>

[module/network]
type = custom/script
interval = 5
exec = ${env:NETWORK_SCRIPT}

[module/weather]
type = custom/script
interval = 60
exec = ${env:WEATHER_SCRIPT}
