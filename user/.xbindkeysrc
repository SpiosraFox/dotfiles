# Start terminal
"urxvt"
    Mod4+Return

# Start command launcher
"rofi -show run"
    Mod4+d

# Start command launcher and run command with privileges
"rofi -show run -run-command 'gksudo {cmd}'"
    Mod4+Shift+d

# Start SSH launcher
"rofi -show ssh"
    Mod4+Shift+s

# Start password selection
"rofi-pass"
    Mod4+p

# Start combi menu
"rofi -show combi"
    Mod4+q

# Start web browser
"$BROWSER"
    XF86WWW

# Start calculator program
"urxvt -e python"
    XF86Calculator

# Start music program
"spotify"
    XF86Music

# Start Telegram
"telegram-desktop"
    XF86Messenger

# Start Discord
"discord"
    Shift+XF86Messenger

# Capture current screen
"$HOME/bin/capture-current-screen.sh"
    Print

# Capture entire screenspace
"maim -u "$HOME/var/tmp/screen.png""
    Mod4+Print

# Capture window
"maim -ui "$(xdotool getactivewindow)" "$HOME/var/tmp/screen.png""
    Shift+Print

# Capture selection
"maim -us "$HOME/var/tmp/screen.png""
    Mod1+Print

# Increase output volume
"$HOME/bin/raise-lower-volume.sh raise"
    XF86AudioRaiseVolume

# Decrease output volume
"$HOME/bin/raise-lower-volume.sh lower"
    XF86AudioLowerVolume

# Mute output
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
    XF86AudioMute

# Mute input
"$HOME/bin/mute-microphone.sh"
    shift+XF86AudioMute

# Play/pause media
"playerctl play-pause"
    XF86AudioPlay

# Next media track
"playerctl next"
    XF86AudioNext

# Previous media track
"playerctl previous"
    XF86AudioPrev

# Stop media
"playerctl stop"
    XF86AudioStop

# Increase brightness
"brightnessctl set 5%+"
    XF86MonBrightnessUp

# Decrease brightness
"brightnessctl set 5%-"
    XF86MonBrightnessDown

# Lock screen
"i3lock -ec 000000 -i "$XDG_DATA_HOME/media/img/lockscreen.png""
    Mod1+l

# Lock screen, suspending system as well
"i3lock -ec 000000 -i "$XDG_DATA_HOME/media/img/lockscreen.png"; systemctl suspend"
    Mod1+Shift+l
