# start terminal
"urxvt"
    Mod4+Return

# start command launcher
"rofi -show run"
    Mod4+d

# start command launcher and run command with privileges
"rofi -show run -run-command 'gksudo {cmd}'"
    Mod4+Shift+d

# start SSH launcher
"rofi -show ssh"
    Mod4+Shift+s

# start password selection
"rofi-pass"
    Mod4+p

# start combi menu
"rofi -show combi"
    Mod4+q

# capture current screen
"$HOME/bin/capture-current-screen.sh"
    Print

# capture entire screenspace
"maim -u "$HOME/screen.png""
    Mod4+Print

# capture window
"maim -ui "$(xdotool getactivewindow)" "$HOME/screen.png""
    Shift+Print

# capture selection
"maim -us "$HOME/screen.png""
    Mod1+Print

# increase output volume
"$HOME/bin/raise-vol.sh"
    XF86AudioRaiseVolume

# decrease output volume
"pactl set-sink-volume @DEFAULT_SINK@ -2%"
    XF86AudioLowerVolume

# mute output
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
    XF86AudioMute

# mute input
"$HOME/bin/mute-microphone.sh"
    shift+XF86AudioMute

# play/pause media
"playerctl play-pause"
    XF86AudioPlay

# next media track
"playerctl next"
    XF86AudioNext

# previous media track
"playerctl previous"
    XF86AudioPrev

# stop media
"playerctl stop"
    XF86AudioStop

# increase brightness
"brightnessctl set 5%+"
    XF86MonBrightnessUp

# decrease brightness
"brightnessctl set 5%-"
    XF86MonBrightnessDown

# lock screen
"i3lock -ec 000000 -i "$HOME/.lockscreen.png""
    Mod1+l

# lock screen, suspending system as well
"i3lock -ec 000000 -i "$HOME/.lockscreen.png" && systemctl suspend"
    Mod1+Shift+l
